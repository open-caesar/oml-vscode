{
    "name": "oml-vscode",
    "displayName": "Oml VS Code Extension",
    "description": "Oml editor support for VS Code, based on OML-LSP.",
    "version": "0.5.0",
    "publisher": "JPL",
    "license": "Apache-2.0",
    "repository": {
        "url": "https://github.com/opencaesar/oml-vscode.git"
    },
    "icon": "images/oml.png",
    "engines": {
        "vscode": "^1.17.0"
    },
    "config": {
        "oml_version": "0.5.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:oml"
    ],
    "main": "./out/client/extension",
    "contributes": {
        "languages": [
            {
                "id": "oml",
                "aliases": [
                    "Oml",
                    "oml"
                ],
                "extensions": [
                    ".oml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "oml",
                "scopeName": "source.oml",
                "path": "./syntaxes/oml.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Oml client configuration",
            "properties": {
                "omlLanguageServer.maxNumberOfProblems": {
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                }
            }
        }
    },
    "scripts": {
        "preinstall": "npm run install:languageserver",
        "install:languageserver": "rm -rf ./build && mkdir build && npm run download:languageserver",
        "download:languageserver": "curl -L -o build/oml-server-$npm_package_config_oml_version.jar https://github.com/opencaesar/oml-server/releases/download/v$npm_package_config_oml_version/oml-server-$npm_package_config_oml_version.jar",
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^6.0.40",
        "typescript": "^2.6.2",
        "vscode": "^1.1.18"
    },
    "dependencies": {
        "vscode-languageclient": "^3.1.0"
    }
}
